<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#57385c"
    android:orientation="vertical">

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_score"
        android:gravity="center"
        android:text="Score: "
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
         />
    
    <com.huxq17.swipecardsview.SwipeCardsView
        android:id="@+id/swipeCardsView"
        android:background="#57385c"
        android:layout_width="250dp"
        android:layout_height="400dp"
        app:alphaOffsetStep="20"
        app:scaleOffsetStep="0.08"
        app:yOffsetStep ="20dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        ></com.huxq17.swipecardsview.SwipeCardsView>

    <ImageButton
    android:id="@+id/btnSpeak"
    android:background="?android:selectableItemBackground"
    android:src="@drawable/mic_blue_64"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="48dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/tap_on_mic"
    android:textColor="@color/white"
    android:textSize="15sp"
    android:textStyle="normal"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"/>




</RelativeLayout>
